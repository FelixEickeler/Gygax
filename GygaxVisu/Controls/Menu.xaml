<UserControl x:Class="GygaxVisu.Controls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GygaxVisu.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_Open file" Click="OpenFile_OnClick" />
                <MenuItem Header="_Open camera" Name="Camera" Initialized="FrameworkElement_OnInitialized" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="_Save all" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="_Print" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="MenuItemExit_OnClick"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem IsCheckable="True" Header="_View all" IsChecked="{Binding ShowCommon3DSpace, Mode=TwoWay}"/>
                <MenuItem Header="_Clear workspace" Click="ClearWorkspace_OnClick"/>
            </MenuItem>
            <MenuItem Header="_Processing">
                <MenuItem Header="_Calculate correction" Click="Correction_OnClick"></MenuItem>
                <MenuItem Header="_Correspondence matching + ICP" Click="ColumnIcp_OnClick"></MenuItem>
                <MenuItem Header="_Correspondence matching" Click="ColumnNoIcp_OnClick"></MenuItem>
                <MenuItem Header="_Generate Texture" Click="CalculateTexture_OnClick"></MenuItem>
                <MenuItem Header="_Generate all Textures" Click="GenerateAllTextures_OnClick"></MenuItem>
                <MenuItem Header="_Build Masks" Click="BuildMasks_OnClick"></MenuItem>
                <MenuItem Header="_Extract form Image Points" Click="ExtractImagePoints_OnClick"></MenuItem>
                <MenuItem Header="_Draw Textures" Click="DrawTextures_OnClick"></MenuItem>
                <MenuItem Header="_Export Object" Click="ObjectExport_OnClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="Sorry, no help yet!" IsEnabled="False"/>
            </MenuItem>
        </Menu>


    </Grid>
</UserControl>
