<UserControl x:Class="GygaxVisu.Controls.Control3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GygaxVisu.Controls"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:gygaxCore="clr-namespace:GygaxCore;assembly=GygaxCore"
             mc:Ignorable="d"
             >
    <Grid>
        <Label Content="loading..." HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="LoadingAnimation"/>
        <hx:Viewport3DX
            x:Name="Viewport"
            TextBrush="Black"
            ShowCoordinateSystem="False"
            CoordinateSystemLabelForeground="White"
            UseDefaultGestures="True"
            Visibility="Hidden"
            >
        </hx:Viewport3DX>
        <Label Grid.Row="0"  HorizontalContentAlignment="Stretch" x:Name="Label" Content="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Visibility="Collapsed"/>
    </Grid>
</UserControl>
