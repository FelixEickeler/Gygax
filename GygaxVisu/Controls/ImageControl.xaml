<UserControl x:Class="GygaxVisu.Controls.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GygaxVisu.Controls"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             >
    <Grid>
        <Border x:Name="RecordingFrame" BorderThickness="0" BorderBrush="Red">
            <Image x:Name="ImageCtrl" Source="{Binding Path=ImageSource, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Stretch="Uniform" MouseDown="UIElement_OnMouseDown" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Border>
    </Grid>
</UserControl>
